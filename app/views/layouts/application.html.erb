<!DOCTYPE html>
<html>
  <head>
    <title>EbookLibrary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if current_user %>
      <%= "Welcome, #{current_user.username}!" %>
      <%= link_to 'Logout', '/logout', :data => { :confirm => 'Are you sure?' }%>
    <% else %>
      <%= link_to 'Signup', '/signup'%>
      <br/>
      <br/>
      <%= link_to 'Login', '/login'%>
    <% end %>

    <%= form_for :book, url: '/results', method: :get do |form| %>
      <h2> Search for an ebook </h2>

      <%= form.text_field :q %>

      <%=  submit_tag("Search") %>
    <% end %>
    <% flash.each do |type, msg| %>
      <div>
        <%= msg %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
